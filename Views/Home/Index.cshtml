@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Inicio";
}

    <!-- Hero Section -->
    <div class="hero">
        <h1>¡Bienvenido a Gestión de Compras!</h1>
        <p>Administra tus productos, familias y subfamilias de manera rápida y eficiente.</p>
        <a href="/Item" class="btn btn-light btn-lg mt-3">Comienza</a>
    </div>

    <!-- Sección de Características -->
    <section class="container mt-5">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card p-4 shadow">
                    <h5 class="card-title">Familias</h5>
                    <p>Organiza tus productos en familias de manera estructurada.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 shadow">
                    <h5 class="card-title">Subfamilias</h5>
                    <p>Clasifica subfamilias para una gestión más detallada.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 shadow">
                    <h5 class="card-title">Items</h5>
                    <p>Administra todos los artículos con información relevante.</p>
                </div>
            </div>
        </div>
    </section>
